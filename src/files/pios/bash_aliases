#!/bin/bash

# Raspberry Pi OS-Specific Bash Aliases
# These aliases are specific to Raspberry Pi OS
# Note: This file inherits Ubuntu aliases, which in turn inherit common aliases

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Load Ubuntu aliases first (which loads common aliases)
# Raspberry Pi OS is Debian-based, so we inherit Ubuntu aliases

DOTFILES_DIR="$(cd "$(dirname "$(readlink "${BASH_SOURCE[0]}")")/.." && pwd)"
[ -f "$DOTFILES_DIR/files/ubuntu/bash_aliases" ] && source "$DOTFILES_DIR/files/ubuntu/bash_aliases"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Raspberry Pi Hardware Information

# Get CPU temperature
alias pi-temp='vcgencmd measure_temp'

# Get throttling status (undervoltage, frequency capping, etc.)
alias pi-throttle='vcgencmd get_throttled'

# Get Raspberry Pi model information
alias pi-version='cat /proc/device-tree/model'
