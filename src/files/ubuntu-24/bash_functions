#!/bin/bash

# Ubuntu 24.04 Bash Functions
# Version-specific functions for Ubuntu 24.04 LTS

# Source parent ubuntu functions first
# Get the directory where this file actually lives (resolves symlinks)
BASH_FUNCTIONS_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ -f "${BASH_FUNCTIONS_DIR}/../ubuntu/bash_functions" ]; then
    source "${BASH_FUNCTIONS_DIR}/../ubuntu/bash_functions"
fi

