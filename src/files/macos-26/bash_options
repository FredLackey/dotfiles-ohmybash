#!/bin/bash

# macOS 15 (Sequoia) Bash Options
# Version-specific shell options for macOS 15

# Get the directory where this file actually lives (resolves symlinks)
BASH_OPTIONS_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Source parent macos bash_options
if [ -f "${BASH_OPTIONS_DIR}/../macos/bash_options" ]; then
    source "${BASH_OPTIONS_DIR}/../macos/bash_options"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# macOS 15-specific options would go here
# Currently no version-specific overrides needed

